<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->

    <style name="CircularCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Mengatur menjadi lingkaran -->
    </style>

    <style name="RoundedCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item> <!-- Mengatur menjadi lingkaran -->
    </style>

    <style name="SwitchCompatGreen" parent="Theme.AppCompat.Light">
        <!-- Warna thumb switch saat aktif -->
        <item name="colorControlActivated">#4CAF50</item>
        <!-- Warna track switch saat aktif (lebih transparan) -->
        <item name="android:colorForeground">#42000000</item>
        <item name="android:colorControlActivated">#4CAF50</item>
    </style>

</resources>