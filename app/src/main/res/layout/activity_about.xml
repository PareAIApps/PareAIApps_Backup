<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/white_secondary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green_light"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:contentInsetStartWithNavigation="0dp"
            app:title="@string/about_us"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">

            <!-- Section without CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/logo_png_fix"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Versi 1.0"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/black_secondary" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_background"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start"
                        android:maxWidth="300dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/background"
                        android:textSize="16sp"
                        android:justificationMode="inter_word"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start|top"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="300dp"
                        android:ellipsize="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_objective"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start"
                        android:maxWidth="300dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/objective"
                        android:textSize="16sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:justificationMode="inter_word"
                        android:gravity="start|top"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="300dp"
                        android:ellipsize="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card baru "Tentang Kami" -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_application_features"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start"
                        android:maxWidth="300dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/application_features"
                        android:textSize="16sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:justificationMode="inter_word"

                        android:gravity="start|top"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="300dp"
                        android:ellipsize="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card baru "Tentang Kami" -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start"
                        android:maxWidth="300dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us_text"
                        android:textSize="16sp"
                        android:justificationMode="inter_word"

                        android:textColor="@color/black_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="start|top"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="300dp"
                        android:ellipsize="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/development_team"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black_secondary"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:maxWidth="300dp" />


            <androidx.core.widget.NestedScrollView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scrollbars="none">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Fathir Ikhsan Card -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded_card"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:layout_alignParentStart="true">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/fathir"
                                android:layout_marginBottom="8dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto"
                                app:shapeAppearanceOverlay="@style/RoundedCornerShape" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fathir Ikhsan"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black_secondary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Project Manager"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textColor="@color/black_secondary"
                                android:layout_marginBottom="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_linkedin_fathir"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_linkedin"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Linkedin" />

                                <ImageView
                                    android:id="@+id/iv_github_fathir"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_github"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Github" />

                                <ImageView
                                    android:id="@+id/iv_instagram_fathir"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_instagram"
                                    android:contentDescription="Instagram" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Nabila Aulya Card -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded_card"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:layout_alignParentStart="true">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/nabila"
                                android:layout_marginBottom="8dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto"
                                app:shapeAppearanceOverlay="@style/RoundedCornerShape" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nabila Aulya"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black_secondary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning Engineer"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textColor="@color/black_secondary"
                                android:layout_marginBottom="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_linkedin_nabila"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_linkedin"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Linkedin" />

                                <ImageView
                                    android:id="@+id/iv_github_nabila"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_github"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Github" />

                                <ImageView
                                    android:id="@+id/iv_instagram_nabila"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_instagram"
                                    android:contentDescription="Instagram" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Haidar Aditya Baran Card -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded_card"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:layout_alignParentStart="true">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/haidar"
                                android:layout_marginBottom="8dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto"
                                app:shapeAppearanceOverlay="@style/RoundedCornerShape" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haidar Aditya Baran"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black_secondary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Back End Developer"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textColor="@color/black_secondary"
                                android:layout_marginBottom="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_linkedin_haidar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_linkedin"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Linkedin" />

                                <ImageView
                                    android:id="@+id/iv_github_haidar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_github"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Github" />

                                <ImageView
                                    android:id="@+id/iv_instagram_haidar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_instagram"
                                    android:contentDescription="Instagram" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Akhtar Faizi Putra Card -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:elevation="4dp"
                            android:background="@drawable/rounded_card"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:layout_alignParentStart="true">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/akhtar"
                                android:layout_marginBottom="8dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto"
                                app:shapeAppearanceOverlay="@style/RoundedCornerShape" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Akhtar Faizi Putra"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black_secondary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mobile App Developer"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textColor="@color/black_secondary"
                                android:layout_marginBottom="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_linkedin_akhtar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_linkedin"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Linkedin" />

                                <ImageView
                                    android:id="@+id/iv_github_akhtar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_github"
                                    android:layout_marginEnd="12dp"
                                    android:contentDescription="Github" />

                                <ImageView
                                    android:id="@+id/iv_instagram_akhtar"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_instagram"
                                    android:contentDescription="Instagram" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </androidx.core.widget.NestedScrollView>



        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>