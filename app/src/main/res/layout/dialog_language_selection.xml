<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_language"
        android:textColor="@color/black_hint"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radio_group_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_indonesia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahasa Indonesia"
            android:textColor="@color/black_hint"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/radio_button_background"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/green_light"
            android:drawablePadding="12dp" />

        <RadioButton
            android:id="@+id/radio_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/black_hint"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/radio_button_background"
            android:buttonTint="@color/green_light"
            android:drawablePadding="12dp" />

    </RadioGroup>

</LinearLayout>