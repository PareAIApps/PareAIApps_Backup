<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="true"
    tools:context=".ui.history.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Info Text -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:text="*Filter Riwayat Scan Disini!"
            android:textColor="@color/black_disabled"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textAlignment="viewEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Filter Button -->
        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="3dp"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawablePadding="8dp"
            android:background="@drawable/filter_button_background"
            android:text="Semua"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/green_light"
            android:minWidth="120dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- "Pilih Riwayat" Text -->
        <TextView
            android:id="@+id/topRightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Pilih Riwayat"
            android:textSize="14sp"
            android:textColor="@color/black_quaternary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/filterButton"
            app:layout_constraintEnd_toStartOf="@id/historyCheckBox" />

        <!-- CheckBox Kanan -->
        <CheckBox
            android:id="@+id/historyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:buttonTint="@color/green_light"
            app:layout_constraintTop_toTopOf="@id/topRightLabel"
            app:layout_constraintBottom_toBottomOf="@id/topRightLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Aksi Batal & Hapus -->
        <LinearLayout
            android:id="@+id/actionButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/topRightLabel"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Batal"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/green_light"
                android:visibility="gone"
                android:background="@drawable/filter_button_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Hapus"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:visibility="gone"
                android:padding="15dp"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <!-- CheckBox Kiri (untuk multiple selection) -->
        <CheckBox
            android:id="@+id/leftCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:buttonTint="@color/green_light"
            app:layout_constraintTop_toTopOf="@id/recyclerViewHistory"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView untuk daftar riwayat -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/actionButtonsContainer"
            app:layout_constraintStart_toEndOf="@id/leftCheckBox"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Layout Kosong (jika tidak ada data) -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="80dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/actionButtonsContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No History Found"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
