<!-- res/drawable/bg_image_button_rounded_rect.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background putih -->
    <solid android:color="@color/white"/>

    <!-- ukuran kotak 78×78dp (sama dengan ImageView) -->
    <size
        android:width="78dp"
        android:height="78dp"/>

    <!-- border‐radius 12dp -->
    <corners android:radius="12dp"/>

    <!-- optional: beri stroke kalau mau garis border -->
    <!--
    <stroke
        android:width="1dp"
        android:color="@color/gray_light"/>
    -->

    <!-- padding dalam shape -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
